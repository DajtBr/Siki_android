<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MenuProduct_ProductCategoryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0739D"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Quản lý"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="top"
        android:layout_marginTop="100dp"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:id="@+id/cvSp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/btnSp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/box"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/circle_background"
                    android:contentDescription="Button Image" />

                <TextView
                    android:id="@+id/text_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sản phẩm"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:layout_below="@id/btnSp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:id="@+id/cvLoaiSp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/btnLoaiSp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/delivery_box"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/circle_background"
                    android:contentDescription="Button Image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại sản phẩm"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:layout_below="@id/btnLoaiSp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:id="@+id/cvSellChart"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/btnSellChart"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/delivery_box"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/circle_background"
                    android:contentDescription="Button Image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng bán"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:layout_below="@id/btnSellChart"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:id="@+id/cvRevenueChart"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/btnRevenueChart"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/delivery_box"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/circle_background"
                    android:contentDescription="Button Image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doanh thu"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:layout_below="@id/btnRevenueChart"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>